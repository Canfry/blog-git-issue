---
interface Props {
  category: string;
}

const { category } = Astro.props;
---

<a
  href={`/category/${category}`}
  class='transition ease-out rounded-xl p-2 bg-zinc-800 text-cyan-500 whitespace-nowrap uppercase hover:shadow-sm hover:shadow-cyan-500 hover:text-zinc-300 duration-300'
  >{category}</a
>
