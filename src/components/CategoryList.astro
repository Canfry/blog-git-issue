---
import type { CollectionEntry } from 'astro:content';
import Category from './Category.astro';

interface Props {
  categories: CollectionEntry<'posts'>['data']['tags'];
  title?: string;
}

const { categories, title } = Astro.props;
---

<div class='grid grid-cols-[auto,1fr] gap-x-14 gap-y-3 mb-8 max-lg:grid-cols-1'>
  {title && <h2 class='font-bold text-3xl text-zinc-300'>{title}</h2>}
  <div class='flex items-center gap-x-4 gap-y-4 flex-wrap'>
    {categories.map((category) => <Category category={category} />)}
  </div>
</div>
